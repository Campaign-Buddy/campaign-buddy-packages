{
	"compilerOptions": {
		/* Basic Options */
		"target": "es6",
		"module": "commonjs",
		"lib": ["ESNext", "DOM"],
		/* Strict Type-Checking Options */
		"strict": true,
		/* Module Resolution Options */
		"moduleResolution": "node",
		"esModuleInterop": true,
		/* Advanced Options */
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"downlevelIteration": true,
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true
	}
}
